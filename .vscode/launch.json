    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Django",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}/backend/",
            "program": "manage.py",
            "args": [
                "runserver"
            ],
            "django": true,
            "justMyCode": false
        },
        {
            "name": "Test Django",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}\\api_yamdb",
            "program": "manage.py",
            "args": [
                "test",
                "-v",
                "2",
            ],
            "django": true,
            "justMyCode": true
        },

    ]
}